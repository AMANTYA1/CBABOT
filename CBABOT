

_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    if [[ $CBA_REPO == "CBABOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    elif [[ $CBA_REPO == "CBABOT" ]]
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    elif [[ $CBA_REPO =~ $regex ]]
    then
        if [[ $CBA_REPO_BRANCH ]]
        then
            echo "${CBA_REPO}/archive/${CBA_REPO_BRANCH}.zip"
        else
            echo "${CBA_REPO}/archive/master.zip"
        fi
    else
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RoZS1MZWdlbmRCb3QvTEVHRU5EVVNFUkJPVC9hcmNoaXZlL0xlZ2VuZEJvdC56aXA=" | base64 -d
    fi
}


_setting_bot () {
    local zippath
    zippath="CBABot.zip"
    echo "  Downloading CBABOT V1.O Source Code..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data HO RHA ..."
    CBAPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  CBA USERBOT V1.O Cleaning.."
    rm -rf "$zippath"
    sleep 5
    cd $CBAPATH
    echo "    ⚜️Starting CBA USERBOT†⚜️     "
    echo "
    💪💪💪💪💪💪💪💪
    "

    python3 ../setup/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_setting_bot
